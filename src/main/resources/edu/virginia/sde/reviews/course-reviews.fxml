<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane prefWidth="600" prefHeight="400" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="edu.virginia.sde.reviews.CourseReviewsController">
    <top>
        <VBox spacing="5">
            <padding>
                <Insets top="10" bottom="10" left="10" right="10"/>
            </padding>

            <Label fx:id="courseTitleLabel" style="-fx-font-size: 16px; -fx-font-weight: bold"/>
            <Label fx:id="instructorLabel" style="-fx-font-size: 14px"/>
            <Label fx:id="averageRatingLabel" style="-fx-font-size: 14px"/>
        </VBox>
    </top>

    <center>
        <ListView fx:id="reviewListView"/>
    </center>

    <bottom>
        <VBox>
            <HBox spacing="5">
                <padding>
                    <Insets top="10" bottom="10" left="10" right="10"/>
                </padding>

                <Button text="Add Review" onAction="#handleAddReview"/>
                <Button text="Edit Review" onAction="#handleEditReview"/>
                <Button text="Delete Review" onAction="#handleDeleteReview"/>
                <Button text="Back" onAction="#handleBack"/>
            </HBox>
            <Label fx:id="messageLabel" textFill="red"/>
        </VBox>
    </bottom>
</BorderPane>
