<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox prefWidth="500" prefHeight="450" spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="edu.virginia.sde.reviews.MyReviewsController">
    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>

    <Label text="My Reviews" style="-fx-font-size: 16px; -fx-font-weight: bold"/>

    <ListView fx:id="reviewListView" VBox.vgrow="ALWAYS" onMouseClicked="#handleReviewClicked"/>

    <Button text="Back" onAction="#handleBack"/>
</VBox>
